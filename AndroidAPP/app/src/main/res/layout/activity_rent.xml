<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vania.app_edd.RENTA">

    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="599dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-12dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp"
            android:text="ID del Producto" />

        <Spinner
            android:id="@+id/comboAssetID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/label_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comboAssetID"
            android:layout_marginTop="44dp"
            android:text="NOMBRE"
            android:layout_alignEnd="@+id/textView13" />

        <TextView
            android:id="@+id/label_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPCIÓN"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/label_nombre"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/label_descripcion"
            android:layout_marginTop="94dp"
            android:text="TIEMPO DE RENTA (DÍAS)" />

        <Button
            android:id="@+id/btn_regresarR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGRESAR AL MENÚ"
            android:layout_marginTop="24dp"
            android:layout_marginStart="28dp"
            android:layout_below="@+id/txt_dias"
            android:layout_toEndOf="@+id/textView13" />

        <Button
            android:id="@+id/btn_rentar_activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RENTAR"
            android:layout_alignBaseline="@+id/btn_regresarR"
            android:layout_alignBottom="@+id/btn_regresarR"
            android:layout_alignEnd="@+id/textView13"
            android:layout_marginEnd="28dp" />

        <EditText
            android:id="@+id/txt_dias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_ID"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="number" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
